{
    "productCode": "$$TARGET_PRODUCT_CODE_FOR_CRDT$$",
    "version": "$$PROJECT_VERSION$$",
    "packageScriptMac": "Mac/adjustVersionInManifest.command",
    "packageScriptWindows": "Windows/adjustVersionInManifest.bat",    
    "targets": [
      {
        "method": "EXTENSION",
        "needsDebugMode": false,
        "csxsManifestFile": "CSXS/manifest.xml"
      }
    ],
    "filters": [
        // By default, sign and encrypt all .jsx files
        { 
          "regExp": "/^.*\\.jsx$/i",  
          "sign": true,
          "encrypt": true
        },
        // But only sign, don't encrypt
        // - the hostscript.jsx and json2.jsx files
        // - the .nzip file 
        // - html, css, js
        { 
          "regExp": "/^jsx\\/hostscript\\.jsx$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^jsx\\/json2\\.jsx$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^shared_js_jsx\\/.*$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^jsx\\/CreativeDeveloperTools_ES\\.nzip$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^jsx\\/libs\\.nzip$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^.*\\.js$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^.*\\.html$/i",  
          "sign": true,
          "encrypt": false
        },
        { 
          "regExp": "/^.*\\.css$/i",  
          "sign": true,
          "encrypt": false
        },
        // Omit developer-only files
        { 
          "regExp": "/^(debug|package\\.json|package-lock\\.json|tsconfig\\.json)$/i",
          "omit": true
        },
        { 
          "regExp": "/^(Templates|Developer|Mac|ToolSources|Windows|build|BuildSettings|LocalLinks|VSCode|node_install)\\/$/i",
          "omit": true
        },
        { 
          "regExp": "/^jsx\\/libs\\/$/i",
          "omit": true
        },
        { 
          "regExp": "/^jsx\\/CreativeDeveloperTools_ES\\/$/i",
          "omit": true
        },
        {
          "regExp": "/^jsx\\/manuallyClearGlobalsIDSN_ES_FromDebugger\\.jsx$/i",
          "omit": "true"
        },
        {
          "regExp": "/^jsx\\/manuallyPreloadIDSN_ES_EngineFromDebugger\\.jsx$/i",
          "omit": "true"
        },
        {
          "regExp": "/^node_modules\\/@types.*$/i",
          "omit": "true"
        },
        {
          "regExp": "/^node_modules\\/types-for-adobe.*$/i",
          "omit": "true"
        },
        {
          "regExp": "/^node_modules\\/undici-types.*$/i",
          "omit": "true"
        },
        { 
          "regExp": "/^.*\\.tpkg$/i",  
          "omit": true
        },
        { 
          // Invisible files
          "regExp": "/^\\..*$/i",  
          "omit": true
        }
    ]
}